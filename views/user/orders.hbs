<section>
    <div class="container">
        <table class="table mt-5">
            <center><h3 class="mt-4">Order History</h3></center>
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th >Address</th>
                    <th >Pincode</th>
                    <th >Mobile</th>
                    <th scope="col">amount</th>
                    <th scope="col">payment</th>
                    <th >status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.pincode}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.GrandTotal}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td><a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a></td>
                </tr>
                {{/each}}
            </tbody>

        </table>
</section>