<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Login</h2>
            <form action="/login" method="POST">
                {{#if loginErr}}
                <p class="error">{{loginErr}}</p>
                {{/if}}
                <div class="form-group">

                    <label for="">Email Address</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter email" value="razi@gmail.com">


                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="password" value="123">
                </div>
                <a href="/signup">Create a new account?</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
        </div>

    </div>
</div>